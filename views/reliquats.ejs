<%- include("partials/header") %> 

    <div class="container content">
        <div class="row mt-5">
            <div class="col-lg-10">
                <h1 class="">Reliquats</h1>
            </div>
            <div class="col-lg-2" style="text-align: right;">
                <form action="/reliquats" method="POST">
                    <button type="submit" class="btn btn-outline-success mt-2">Mise à Jours</button>
                </form>
            </div>
        </div>
        <% const today = new Date() %> 
        <%- include("partials/alerts-handler") %>
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Matricule</th>
                    <th>Départs Autorisées</th>
                    <th>Droit <%= today.getFullYear()-1 %></th>
                    <th>Droit <%= today.getFullYear() %></th>
                </tr>
            </thead>
            <tbody>
                <% reliquats.forEach(rlqt => { %>
                    <tr>
                        <td><a href="/personnel/<%= rlqt.rid %>"><%= rlqt.matricule %></a></td>
                        <td><%= rlqt.departs %> </td>
                        <td><%= rlqt.droitN_1 %> </td>
                        <td><%= rlqt.droitN %> </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

<%- include("partials/footer") %> 