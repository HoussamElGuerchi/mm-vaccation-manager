<%- include("partials/header") %>

    <div class="container content mt-5">
        <h1 class="mt-4">Reprise de travail :</h1>
        <form action="/reprise-travail/<%= leave._id %> " method="POST">
            <div class="form-group">
                <div class="form-group">
                    <label for="">Matricule :</label>
                    <input type="text" name="matricule" class="form-control" value="<%= leave.matricule %>" disabled required autocomplete="off">
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="">Du :</label>
                            <input type="text" name="startDate" class="form-control" value="<%= leave.startDate %>" disabled required autocomplete="off">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="">Au :</label>
                            <input type="text" name="endDate" class="form-control" value="<%= leave.endDate %>" disabled required autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="">Nature :</label>
                            <input type="text" name="type" class="form-control" value="<%= leave.type %>" disabled required autocomplete="off">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="">Nombre des jours :</label>
                            <input type="text" name="numberOfDays" class="form-control" value="<%= leave.numberOfDays %>" disabled required autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Date de reprise :</label>
                    <input type="date" name="resumeDate" class="form-control" required autocomplete="off">
                </div>
            <div class="center p-3">
                <button type="submit" class="btn btn-success m-2">Confirmer</button>
                <a href="/historique" class="btn btn-outline-danger m-2">Annuler</a>
            </div>
        </form>
        <%- include("partials/alerts-handler") %>        
    </div>

<%- include("partials/footer") %>