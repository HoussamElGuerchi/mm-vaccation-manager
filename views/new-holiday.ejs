<%- include("partials/header") %> 
    <div class="container mt-5 p-5">
        <h1>Nouveau jours férié</h1>
        <form action="/nouveau-jours-ferie" method="POST" class="mt-3 p-5">
            <div class="content">
                <div class="form-group">
                    <label for="">Titre</label>
                    <input class="form-control" type="text" name="holidayTitle" id="" required>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="">Date de debut</label>
                            <input class="form-control" type="date" name="startDate" id="" required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="">Durée</label>
                            <input class="form-control" type="number" name="duration" id="" required>
                        </div>
                    </div>
                </div>
            </div>  
            <button class="btn btn-success mt-3">Ajouter</button>
        </form>
        
        <% if (alert) { %>
            <%- include("partials/alerts-handler") %> 
        <% } %>
    </div>
<%- include("partials/footer") %> 